<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:id="@+id/tb"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="?attr/colorPrimary"
            app:title="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:theme="@style/Theme.AppCompat.Light"
                android:id="@+id/tv_test"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="@string/test"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="Hello World!"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_rlv"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="@string/rlv"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_net"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="@string/net"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_list"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="@string/lv"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_net_test"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="@string/net_test"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_sensor"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="sensor" />

            <TextView
                android:id="@+id/tv_okhttp"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="ok_http" />

            <TextView
                android:id="@+id/tv_refresh"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="刷新" />

            <TextView
                android:id="@+id/tv_my_refresh"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="我的刷新" />

            <Button
                android:id="@+id/bt_lambda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lambda" />

            <Button
                android:id="@+id/bt_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv" />

            <TextView
                android:id="@+id/tv_mvp"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="MVP" />
            <TextView
                android:id="@+id/tv_design"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="设计模式" />

            <TextView
                android:id="@+id/tv_eventbus"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="eventbus" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>